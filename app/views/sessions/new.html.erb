<h1>Sign in</h1>

<%= render "shared/errors" %>

<form action="<%= session_url %>" method="post">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

  <label for="user_email">Email</label>
  <input type="text"
         name="user[email]"
         id="email">
  <br>

  <label for="user_password">Password</label>
  <input type="password"
         name="user[password]"
         id="password">
  <br>

  <input type="submit">
</form>

<h1>Make new user</h1>

<%= render "shared/errors" %>

<%# render "shared/form", user: @user, action: :new_user %>

<form action="<%= users_url %>" method="post">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

  <label for="user_email">Email</label>
  <input type="text"
         name="user[email]"
         id="email"
         value="<%= @user.email %>">
  <br>

  <label for="user_password">Password</label>
  <input type="password"
         name="user[password]"
         id="password">
  <br>

  <input type="submit">
</form>
